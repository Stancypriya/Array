public class Display_OddEven_Numbers {

 public static void main(String[] args) {

  int a[] = { 1, 2, 3, 4, 5, 6, 7 };

  for (int i = 0; i < a.length; i++) {
   if (a[i] % 2 == 0) {
    System.out.println("even number : " + a[i]);
   }
   if (a[i] % 2 == 1) {
    System.out.println("odd number : " + a[i]);
   }
  }
 }
}
